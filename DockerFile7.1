#base image
FROM centos:7.1.1503

# maintainer info
LABEL MAINTAINER="rainbow702"
LABEL MAINTAINER_EMAIL="excellent702@163.com"

# software version
LABEL OS_VERSION="CentOS-7.1.1503"
LABEL JDK_VERSION="ORACLE-JDK-8u172-linux-x64"

# JDK root dir
ENV JDK_DIR=/usr/java

# create jdk root dir
RUN mkdir -p $JDK_DIR

# add jdk1.8.0_171, 'ADD' command will unpack it as a directory(because it is a 'gz' file)
ADD jdk-8u172-linux-x64.tar.gz $JDK_DIR

# add java env
ENV JAVA_HOME=$JDK_DIR/jdk1.8.0_172
ENV PATH=$PATH:$JAVA_HOME/bin:$JAVA_HOME/jre/bin
ENV CLASSPATH=.:$JAVA_HOME/lib:$JAVA_HOME/jre/lib:$JAVA_HOME/lib/dt.jar:$JAVA_HOME/lib/tools.jar
